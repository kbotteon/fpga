{
    "hostRequirements": {
        // Expedites synthesis without driving cost through the roof
        "cpus": 8,
        // Typical for 6-8 synthesis jobs
        "memory": "32gb",
        // Vivado and Vitis are enormous
        // This probably isn't enough
        "storage": "64gb"
    },

    "build": {
        "dockerfile": "./Dockerfile",
        "context": "."
    },

    "features": {

        "ghcr.io/devcontainers/features/common-utils:2": {
            "username": "codespace",
            "userUid": "1000",
            "userGid": "1000"
        },

        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        },

        "ghcr.io/devcontainers/features/git:1": {
            "version": "2.42.0",
            "ppa": "false"
        },

        "ghcr.io/devcontainers/features/git-lfs:1": {
            "version": "3.4.0"
        },

        // For autodoc scripts
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10.8",
            "additionalVersions": "3.9.16",
            "installJupyterlab": "false"
        },

        // For AsciiDoctor Docker container
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest"
        }
    },

    "remoteUser": "codespace",
    "containerUser": "codespace",

    "customizations": {
        "vscode": {
            "settings": {
                // Eliminates need for .editorconfig
                "editor.renderWhitespace": "all",
                "files.trimTrailingWhitespace": true,
                "files.insertFinalNewline": true
            }
        }
    },

    // Run any lingering setup that we couldn't do in the Dockerfile
    "postCreateCommand": ".devcontainer/final.sh"

}
